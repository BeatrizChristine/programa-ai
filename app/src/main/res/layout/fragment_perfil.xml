<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/perfil1"
    tools:context=".fragments.PerfilFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileImg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:background="@color/roxo_escuro"
        android:padding="3dp"
        android:src="@drawable/ic_person_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="@color/roxo_med"
        app:strokeWidth="2.5dp" />


    <TextView
        android:id="@+id/titleUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/sourcecode"
        android:gravity="center"
        android:text="carregando..."
        android:textColor="@color/roxo_claro"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/profileImg"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="@id/profileImg"
        app:layout_constraintTop_toBottomOf="@id/profileImg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearlayout"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@drawable/white_background"
        android:layout_marginStart="14dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleUserName">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:elevation="5dp"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:text="Seja Bem Vindo(a)!"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/roxo_claro"
                    android:textStyle="bold"
                    android:fontFamily="@font/sourcecode"/>

            </LinearLayout>
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="6dp"
            android:alpha="0.5"
            android:background="@color/roxo_mtclaro"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:fontFamily="@font/sourcecode"
                android:singleLine="true"
                android:text="Username:"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/roxo_claro"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textuserUserName"
                android:layout_width="180dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:fontFamily="@font/sourcecode"
                android:gravity="left"
                android:singleLine="true"
                android:text="carregando..."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="6dp"
            android:alpha="0.5"
            android:background="@color/roxo_mtclaro"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/name"
                android:layout_weight="1"
                android:text="Nome:"
                android:maxLines="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:fontFamily="@font/sourcecode"
                android:textStyle="bold"
                android:textColor="@color/roxo_claro"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/textusername"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:fontFamily="@font/sourcecode"
                android:gravity="left"
                android:singleLine="true"
                android:text="carregando..."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/roxo_mtclaro"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:padding="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/sourcecode"
                android:text="Email:"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/roxo_claro"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textuseremail"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:fontFamily="@font/sourcecode"
                android:gravity="left"
                android:singleLine="true"
                android:text="carregando..."
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/roxo_mtclaro"/>


        <Button
            android:id="@+id/buttonlogout"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_profile"
            android:fontFamily="@font/sourcecode"
            android:gravity="center"
            android:text="Sair"
            android:drawableLeft="@drawable/ic_logout"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/linearlayout"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@id/linearlayout"
            app:layout_constraintTop_toBottomOf="@id/linearlayout"
            app:layout_constraintVertical_bias="0.261" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/camera_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:clickable="true"
        android:contentDescription="TODO"
        android:focusable="true"
        android:src="@drawable/ic_camera"
        app:backgroundTint="@color/roxo_med"
        app:layout_constraintBottom_toBottomOf="@+id/profileImg"
        app:layout_constraintEnd_toEndOf="@+id/profileImg" />


</androidx.constraintlayout.widget.ConstraintLayout>