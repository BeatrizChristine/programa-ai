                    android:fontFamily="@font/sourcecode"
                    android:justificationMode="inter_word"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imagem6"
